generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id        String @id @default(uuid())
  username  String @unique
  email     String @unique
  password  String
  sessionId String @unique
  notes     Note[]

  createdAt              DateTime        @default(now())
  friendRequestsSent     FriendRequest[] @relation("SentRequests")
  friendRequestsReceived FriendRequest[] @relation("ReceivedRequests")
}

model Note {
  id        String  @id @default(uuid())
  title     String
  content   String
  isPrivate Boolean

  createdAt DateTime @default(now())

  Student   Student @relation(fields: [studentId], references: [id])
  studentId String
}

model FriendRequest {
  id         String      @id @default(uuid())
  senderId   String
  receiverId String
  status     StatusTypes
  sender     Student     @relation("SentRequests", fields: [senderId], references: [id])
  receiver   Student     @relation("ReceivedRequests", fields: [receiverId], references: [id])
}

enum StatusTypes {
  PENDING
  ACCEPTED
  REJECTED
}
